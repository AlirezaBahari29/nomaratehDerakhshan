<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StudentsPage"
    android:background="@drawable/background_app">
    <Button
        android:id="@+id/sortButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="20dp"
        android:text="Sort"
        android:textColor="@color/black"
        />
    <TextView
        android:id="@+id/cellScore1"
        android:layout_width="250dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@id/sortButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="20dp"
        android:textColor="@color/purple_700"
        android:textSize="15sp"
        android:gravity="center"
        android:background="@color/white"
        />
    <TextView
        android:id="@+id/cellScore2"
        android:layout_width="250dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@id/cellScore1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="20dp"
        android:textColor="@color/purple_700"
        android:textSize="15sp"
        android:gravity="center"
        android:background="@color/white"
        />
    <TextView
        android:id="@+id/cellScore3"
        android:layout_width="250dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@id/cellScore2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="20dp"
        android:textColor="@color/purple_700"
        android:textSize="15sp"
        android:gravity="center"
        android:background="@color/white"
        />
    <TextView
        android:id="@+id/cellScore4"
        android:layout_width="250dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@id/cellScore3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="20dp"
        android:textColor="@color/purple_700"
        android:textSize="15sp"
        android:gravity="center"
        android:background="@color/white"
        />
    <TextView
        android:id="@+id/cellScore5"
        android:layout_width="250dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@id/cellScore4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="20dp"
        android:textColor="@color/purple_700"
        android:textSize="15sp"
        android:gravity="center"
        android:background="@color/white"
        />
    <TextView
        android:id="@+id/explainText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/cellScore5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="50dp"
        android:textColor="@color/purple_700"
        android:text="برای دیدن وضعیت خود روی نام خود کلید کنید"
        android:gravity="center"
        android:textSize="20sp"
        android:background="@color/white"
        />
    <Button
        android:id="@+id/averageButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/explainText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="10dp"
        android:text="میانگین کل کلاس"
        android:textSize="15sp"
        android:textColor="@color/black"
        />


</androidx.constraintlayout.widget.ConstraintLayout>